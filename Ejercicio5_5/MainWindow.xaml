<Window x:Class="Ejercicio5_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio5_5"
        mc:Ignorable="d"
        Title="Número" Height="300" Width="500">
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Dado un número entre 0 al 10 lo regresa escrito en palabras." FontSize="20" />

            <StackPanel Orientation="Horizontal" Margin="10" >
                <TextBox x:Name="NumTextBox" Text="" Height="20" Width="50" />
                <TextBlock Text=" = " FontSize="16" />
                <TextBlock x:Name="ResultTextBlock" Text="" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10" >
                <Button Content="Aceptar" Click="AceptarButton_Click" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
