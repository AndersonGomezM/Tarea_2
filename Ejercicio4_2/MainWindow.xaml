<Window x:Class="Ejercicio4_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio4_2"
        mc:Ignorable="d"
        Title="Calcular" Height="300" Width="500" >
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10" >
            <TextBlock Text="Calcula el resultado de un número" FontSize="20" />
            <TextBlock Text=" elevado a cualquier potencia." FontSize="20" />

            <StackPanel Orientation="Horizontal" Margin="10" >

                <TextBox x:Name="NumTextBox" Text="" Height="20" Width="50" />
                <TextBlock Text="^" FontSize="16" />
                <TextBox x:Name="ExponentTextBox" Text="" Height="20" Width="50" />
                <TextBlock Text=" = " FontSize="16" />
                <TextBlock x:Name="ResultTextBlock" Text="" FontSize="16" />

            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10" >
                <Button Content="Calcular" Click="CalcularButton_Click" />
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
